{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Backend Helm Chart Values",
  "description": "Schema for todo-chatbot backend Helm chart values.yaml",
  "type": "object",
  "required": ["replicaCount", "image", "service"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 2,
      "description": "Number of backend pod replicas"
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository",
          "examples": ["todo-chatbot-backend"]
        },
        "tag": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Container image tag (semver)",
          "examples": ["1.0.0"]
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8000
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "default": "100m"
            },
            "memory": {
              "type": "string",
              "default": "128Mi"
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "default": "500m"
            },
            "memory": {
              "type": "string",
              "default": "512Mi"
            }
          }
        }
      }
    },
    "env": {
      "type": "object",
      "properties": {
        "CORS_ORIGINS": {
          "type": "string",
          "description": "Allowed CORS origins"
        },
        "LOG_LEVEL": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
          "default": "INFO"
        }
      }
    },
    "secrets": {
      "type": "object",
      "description": "Sensitive values (should be provided at install time)",
      "properties": {
        "DATABASE_URL": {
          "type": "string",
          "description": "Neon PostgreSQL connection string"
        },
        "JWT_SECRET": {
          "type": "string",
          "description": "JWT signing secret"
        },
        "GROQ_API_KEY": {
          "type": "string",
          "description": "Groq API key for LLM"
        }
      }
    },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "default": "/health"
        },
        "initialDelaySeconds": {
          "type": "integer",
          "default": 10
        },
        "periodSeconds": {
          "type": "integer",
          "default": 30
        }
      }
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "default": "/health"
        },
        "initialDelaySeconds": {
          "type": "integer",
          "default": 5
        },
        "periodSeconds": {
          "type": "integer",
          "default": 10
        }
      }
    }
  }
}
